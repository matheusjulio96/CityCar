<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.matheus.citycar.Activity_ger_DetalheSolicitacao"

    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/lblDetalheNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lblNome"
        tools:text="@string/lblNome"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/txtDetalheNome"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtDetalheNome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:singleLine="false"
        android:textAppearance="@style/TextAppearance.AppCompat"
        app:layout_constraintRight_toLeftOf="@+id/txtDetalheSetor"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtDetalheSetor"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/lblDetalheSetor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lblSetor"
        tools:text="@string/lblSetor"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="29dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/txtDetalheSetor"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtDetalheSetor"
        android:layout_width="199dp"
        android:layout_height="0dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAppearance="@style/TextAppearance.AppCompat"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/txtDetalheHoraInicio"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="21dp"
        app:layout_constraintTop_toTopOf="@+id/lblDetalheSetor" />

    <TextView
        android:id="@+id/lblDetalhePeriodo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_periodo"
        tools:text="@string/txt_periodo"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/lblDetalheHoraInicio"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lblDetalheHoraInicio" />

    <EditText
        android:id="@+id/txtDetalhePeriodo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="11sp"
        tools:maxLines="2"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/lblDetalhePeriodo"
        app:layout_constraintTop_toTopOf="@+id/lblDetalhePeriodo" />

    <TextView
        android:id="@+id/lblDetalheMotivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_motivo"
        tools:text="@string/txt_motivo"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/txtDetalheMotivo"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/txtDetalheMotivo" />

    <TextView
        android:id="@+id/lblDetalheHoraInicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_hora_inicio"
        tools:text="@string/txt_hora_inicio"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="62dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/txtDetalheHoraInicio"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDetalheSolicitacaoVeiculos"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:onClick="listaVeiculoClicked"
        android:text="@string/btnConsularVeiculos"
        app:layout_constraintBottom_toTopOf="@+id/txtDetalheModelo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:text="@string/btnConsularVeiculos"
        tools:textSize="12sp" />

    <EditText
        android:id="@+id/txtDetalheMotivo"
        android:layout_width="0dp"
        android:layout_height="63dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:textSize="12sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnDetalheSolicitacaoVeiculos"
        android:layout_marginEnd="4dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="59dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtDetalhePeriodo" />

    <EditText
        android:id="@+id/txtDetalheHoraInicio"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:textSize="11sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/txtDetalheMotivo"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="42dp"
        app:layout_constraintRight_toRightOf="@+id/txtDetalheSetor"
        android:layout_marginTop="13dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="22dp"
        app:layout_constraintLeft_toLeftOf="@+id/txtDetalheModelo"
        app:layout_constraintTop_toTopOf="@+id/lblDetalheHoraInicio" />

    <TextView
        android:id="@+id/lblDetalheVeiculo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lblPlaca"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/btnDetalheSolicitacaoVeiculos"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/btnDetalheSolicitacaoVeiculos" />

    <TextView
        android:id="@+id/lblDetalhePlaca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lblModelo"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="34dp"
        app:layout_constraintTop_toBottomOf="@+id/btnDetalheSolicitacaoVeiculos"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/txtDetalhePlaca" />

    <EditText
        android:id="@+id/txtDetalhePlaca"
        android:layout_width="117dp"
        android:layout_height="0dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/txtDetalheModelo"
        app:layout_constraintTop_toBottomOf="@+id/lblDetalheVeiculo"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/lblDetalheVeiculo" />

    <EditText
        android:id="@+id/txtDetalheModelo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="2dp"
        app:layout_constraintRight_toRightOf="@+id/btnDetalheSolicitacaoVeiculos"
        android:layout_marginTop="195dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="195dp"
        app:layout_constraintLeft_toLeftOf="@+id/lblDetalhePlaca"
        app:layout_constraintTop_toTopOf="@+id/txtDetalhePeriodo" />

    <Button
        android:id="@+id/btnCancelar"
        android:layout_width="119dp"
        android:layout_height="48dp"
        android:onClick="btnCancelar"
        android:text="@string/btnCancelar"
        android:textSize="12sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="34dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnAprovar"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnAprovar" />

    <Button
        android:id="@+id/btnAprovar"
        android:layout_width="118dp"
        android:layout_height="48dp"
        android:onClick="btnAprovar"
        android:text="@string/btnAprovar"
        android:textSize="12sp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="50dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="43dp" />

    <EditText
        android:id="@+id/txtDetalheSolicitacaoLocalRetirada"
        android:layout_width="215dp"
        android:layout_height="51dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:textSize="12sp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/textView14"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtDetalheSolicitacaoHoraRetirada"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/textView14" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Local de Retirada"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="4dp"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/txtDetalhePlaca"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hora Retirada:"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/txtDetalheSolicitacaoLocalRetirada"
        android:layout_marginStart="6dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/txtDetalheSolicitacaoHoraRetirada" />

    <EditText
        android:id="@+id/txtDetalheSolicitacaoHoraRetirada"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="12sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/btnAprovar"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/txtDetalheModelo"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="26dp"
        app:layout_constraintLeft_toRightOf="@+id/lblDetalhePlaca" />

</android.support.constraint.ConstraintLayout>
